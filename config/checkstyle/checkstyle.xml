<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
    <property name="severity" value="error"/>
    <module name="TreeWalker">
        <!-- Requiere Javadoc en clases, interfaces, enums, anotaciones -->
        <module name="JavadocType">
            <property name="scope" value="public"/>
            <property name="severity" value="error"/>
        </module>
        <!-- Requiere Javadoc en métodos públicos -->
        <module name="JavadocMethod">
            <property name="scope" value="public"/>
            <property name="allowMissingParamTags" value="false"/>
            <property name="allowMissingThrowsTags" value="false"/>
            <property name="severity" value="error"/>
        </module>
        <!-- Requiere Javadoc en variables públicas (si aplica) -->
        <module name="JavadocVariable">
            <property name="scope" value="public"/>
            <property name="severity" value="warning"/>
        </module>
        <!-- Reglas básicas de formato (opcional, se pueden ampliar) -->
        <module name="WhitespaceAfter"/>
        <module name="WhitespaceAround"/>
        <module name="NoLineWrap"/>
        <module name="LineLength">
            <property name="max" value="140"/>
        </module>
    </module>
    <!-- Reporte XML por defecto en build/reports/checkstyle -->
</module>
